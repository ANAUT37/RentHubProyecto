<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".view.fragments.EditAnuncioFragment" >

    <TextView
        android:id="@+id/tvWhatFragment10"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/bg_title"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Editar anuncio"
        android:textAlignment="center"
        android:textColor="@color/azulMarino"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWhatFragment10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bttnAddEditImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="31dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_input_1"
                android:gravity="center_vertical"
                android:paddingTop="-10dp"
                android:scrollbarSize="0dp"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/azulMarino"
                android:textSize="34sp"
                app:layout_constraintBottom_toTopOf="@+id/rvEditAnunImages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlCompat,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/bttnRemoveEditImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_input_1"
                android:gravity="clip_vertical|center_vertical|fill_vertical"
                android:paddingTop="-10dp"
                android:scrollbarSize="0dp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/azulMarino"
                android:textSize="34sp"
                app:layout_constraintBottom_toTopOf="@+id/rvEditAnunImages"
                app:layout_constraintEnd_toStartOf="@+id/bttnAddEditImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlCompat,TouchTargetSizeCheck" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEditAnunImages"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="31dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView33" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Título del anuncio"
                android:textAlignment="center"
                android:textColor="@color/azulClaro"
                android:textColorHint="#656565"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view27" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Añadir o eliminar imágenes"
                android:textAlignment="center"
                android:textColor="@color/azulClaro"
                android:textColorHint="#656565"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view27"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@color/azulClaro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvEditAnunImages" />

            <EditText
                android:id="@+id/tvEditAnunTitulo"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bg_input_1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:hint="Título"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/azulMarino"
                android:textColorHint="@color/grisClaro"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView34"
                tools:ignore="TextViewEdits,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Descripción del anuncio"
                android:textAlignment="center"
                android:textColor="@color/azulClaro"
                android:textColorHint="#656565"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditAnunTitulo" />

            <EditText
                android:id="@+id/etEditAnunDescripcion"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bg_input_1"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:gravity="top"
                android:hint="Descripción del anuncio"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:paddingEnd="10dp"
                android:shadowColor="#AEAEAE"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/grisClaro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView35"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Precio del inmueble"
                android:textAlignment="center"
                android:textColor="@color/azulClaro"
                android:textColorHint="#656565"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEditAnunDescripcion" />

            <EditText
                android:id="@+id/etEditAnuncioPrecio"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_input_1"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Precio €/Mes"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:shadowColor="#AEAEAE"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/grisClaro"
                app:layout_constraintBottom_toTopOf="@+id/view8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView36" />

            <View
                android:id="@+id/view28"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@color/azulClaro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEditAnuncioPrecio" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Información del inmueble"
                android:textAlignment="center"
                android:textColor="@color/azulClaro"
                android:textColorHint="#656565"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view28" />

            <FrameLayout
                android:id="@+id/flEditAnuncioCategoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView37">

            </FrameLayout>

            <Button
                android:id="@+id/bttnEditAnuncioGuardar"
                android:layout_width="89dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/bg_button_03"
                android:text="GUARDAR"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flEditAnuncioCategoria"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/bttnEditAnuncioGuardar2"
                android:layout_width="89dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/bg_button_04"
                android:text="CANCELAR"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bttnEditAnuncioGuardar"
                app:layout_constraintTop_toBottomOf="@+id/flEditAnuncioCategoria"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>