<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAnuncioMini"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        app:cardBackgroundColor="@color/blanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view23"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/azulClaro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivAnunItemFoto"
                android:layout_width="118dp"
                android:layout_height="79dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_claro_transparente_03" />

            <TextView
                android:id="@+id/tvAnunItemPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_1"
                android:fontFamily="@font/roboto_bold"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="â‚¬/mes"
                android:textColor="@color/azulMarino"
                app:layout_constraintStart_toEndOf="@+id/ivAnunItemFoto"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAnunItemCategoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Categoria"
                android:textColor="@color/azulMarino"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvAnunItemPrecio"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvContItemTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Titulo"
                android:textColor="@color/azulMarino"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivAnunItemFoto"
                app:layout_constraintTop_toBottomOf="@+id/tvAnunItemPrecio" />

            <TextView
                android:id="@+id/tvContItemDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Direccion"
                android:textColor="@color/negroMedio"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ivAnunItemFoto"
                app:layout_constraintTop_toBottomOf="@+id/tvContItemTitulo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>