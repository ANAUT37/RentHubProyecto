<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:paddingTop="8sp"
    android:paddingBottom="8sp"
    tools:context=".view.SettingsActivity">

    <TextView
        android:id="@+id/tvWhatFragment"
        android:layout_width="198dp"
        android:layout_height="56dp"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="107dp"
        android:background="@drawable/bg_title"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="ConfiguraciÃ³n"
        android:textAlignment="center"
        android:textColor="@color/azulMarino"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="607dp"
        android:layout_marginBottom="9dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWhatFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view11"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="18dp"
                android:background="@color/azulMedio"
                app:layout_constraintBottom_toTopOf="@+id/bttnSettNotificaciones"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/regTexto9" />

            <TextView
                android:id="@+id/regTexto9"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="Notificaciones"
                android:textColor="@color/azulMarino"
                android:textColorHint="#656565"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bttnSettGestionarCuenta" />

            <Button
                android:id="@+id/bttnSettNotificaciones"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="45dp"
                android:background="#00FFFFFF"
                android:elevation="0dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="8dp"
                android:text="Gestionar notificaciones"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/negroMedio"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regTexto9"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regTexto9"
                app:srcCompat="@drawable/angle_right" />

            <TextView
                android:id="@+id/regTexto7"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="Tu cuenta"
                android:textColor="@color/azulMarino"
                android:textColorHint="#656565"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/etNameRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view12"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="18dp"
                android:background="@color/azulMedio"
                app:layout_constraintBottom_toTopOf="@+id/bttnSettEditPerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/regTexto7" />

            <Button
                android:id="@+id/bttnSettEditPerfil"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="45dp"
                android:background="#00FFFFFF"
                android:elevation="0dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="8dp"
                android:text="Editar perfil"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/negroMedio"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regTexto7"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regTexto7"
                app:srcCompat="@drawable/angle_right" />

            <Button
                android:id="@+id/bttnSettGestionarCuenta"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="45dp"
                android:background="#00FFFFFF"
                android:elevation="0dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="8dp"
                android:text="Gestionar cuenta"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/negroMedio"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bttnSettEditPerfil"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:srcCompat="@drawable/angle_right" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/app_version_info"
        android:textAlignment="center"
        android:textColor="@color/negroMedio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

</androidx.constraintlayout.widget.ConstraintLayout>