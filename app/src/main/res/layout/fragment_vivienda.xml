<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    tools:context=".view.fragments.ViviendaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etViviendaBanyos"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bg_input_1"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Num. baños"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:shadowColor="#AEAEAE"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="#656565"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/etViviendaDormitorios"
                app:layout_constraintTop_toBottomOf="@+id/etViviendaTamanyo" />

            <EditText
                android:id="@+id/etViviendaDormitorios"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/bg_input_1"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Num. dormitorios"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:shadowColor="#AEAEAE"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="#656565"
                app:layout_constraintEnd_toStartOf="@+id/etViviendaBanyos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etViviendaTamanyo" />

            <EditText
                android:id="@+id/etViviendaPlanta"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_input_1"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Planta"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:shadowColor="#AEAEAE"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="#656565"
                app:layout_constraintEnd_toStartOf="@+id/swViviendaAscensor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etViviendaDormitorios" />

            <EditText
                android:id="@+id/etViviendaTamanyo"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bg_input_1"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Tamaño (En M\u00B2)"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:shadowColor="#AEAEAE"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="#656565"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/swViviendaAscensor"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="31dp"
                android:background="@drawable/bg_input_1"
                android:buttonTint="@color/azulMarino"
                android:fontFamily="@font/roboto_medium"
                android:foregroundTint="@color/purple_200"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:text="Ascensor"
                android:textColor="@color/negroMedio"
                android:textSize="18sp"
                android:thumbTint="@color/negroMedio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/etViviendaPlanta"
                app:layout_constraintTop_toBottomOf="@+id/etViviendaBanyos" />

            <Switch
                android:id="@+id/swViviendaTrastero"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="31dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_input_1"
                android:buttonTint="@color/azulMarino"
                android:fontFamily="@font/roboto_medium"
                android:foregroundTint="@color/purple_200"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:text="@string/trastero"
                android:textColor="@color/negroMedio"
                android:textSize="18sp"
                android:thumbTint="@color/negroMedio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/swViviendaGaraje"
                app:layout_constraintTop_toBottomOf="@+id/swViviendaAscensor" />

            <Switch
                android:id="@+id/swViviendaGaraje"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_input_1"
                android:buttonTint="@color/azulMarino"
                android:fontFamily="@font/roboto_medium"
                android:foregroundTint="@color/purple_200"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:text="@string/garaje"
                android:textColor="@color/negroMedio"
                android:textSize="18sp"
                android:thumbTint="@color/negroMedio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/swViviendaTrastero"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etViviendaPlanta" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>